{
  "compilerOptions": {
    "alwaysStrict": true,
    "strict": true,
    "module": "commonjs",
    "target": "ES6",
    "lib": ["es6", "es2017"],
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["./src/*"]
    },
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
